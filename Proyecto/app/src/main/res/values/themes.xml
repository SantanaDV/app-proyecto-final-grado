<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base, MaterialComponents con DayNight, sin ActionBar -->
    <style name="Theme.FacilGimApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <item name="themeColorOption1">@drawable/circle_blue</item>
        <item name="themeColorOption2">@drawable/circle_green</item>
        <item name="themeColorOption3">@drawable/circle_yellow</item>

        <!-- Sistema pinta las barras con nuestros colores -->
        <item name="android:windowDrawsSystemBarBackgrounds">true</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>

        <!--  Colores Material (default azul) -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorSecondary">@color/blue_200</item>
        <!-- …otros atributos… -->

        <!-- Fondo de ventana también en colorPrimary -->
        <item name="android:windowBackground">?attr/colorPrimary</item>
    </style>

    <!-- Variante verde -->
    <style name="Theme.Green" parent="Theme.FacilGimApp">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorSecondary">@color/green_200</item>

    </style>

    <!-- Variante amarilla -->
    <style name="Theme.Yellow" parent="Theme.FacilGimApp">
        <item name="colorPrimary">@color/yellow_700</item>
        <item name="colorPrimaryVariant">@color/yellow_500</item>
        <item name="colorSecondary">@color/yellow_900</item>

    </style>

    <!-- Aplica a los números de cada día -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <!-- Color oscuro sobre fondo claro -->
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Aplica a los nombres de los días (lun, mar, ...) -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <!-- Color oscuro sobre fondo claro -->
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>





</resources>
