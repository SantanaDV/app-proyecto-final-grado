<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Tema base de la aplicación -->
    <style name="Theme.FacilGimApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <item name="colorOnSurfaceVariant">@color/colorOnSurfaceVariant</item>
        <!-- Primary / Secondary -->
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
        <item name="colorOnSecondary">@color/white</item>

        <!-- Surface / Background -->
        <item name="colorSurface">@color/colorSurface</item>
        <item name="colorOnSurface">@color/colorOnSurface</item>
        <!-- Pinta el fondo de la ventana -->
        <item name="android:windowBackground">@color/colorBackground</item>

        <!-- Barra de estado y navegación -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="android:navigationBarColor">?attr/colorPrimary</item>
    </style>

    <!-- Variantes de tema en otros colores -->
    <style name="Theme_Green" parent="Theme.FacilGimApp">
        <item name="colorPrimary">@color/green_500</item>
        <item name="colorPrimaryVariant">@color/green_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/green_500</item>
        <item name="colorSecondaryVariant">@color/green_700</item>
    </style>

    <style name="Theme_Blue" parent="Theme.FacilGimApp">
        <item name="colorPrimary">@color/blue_500</item>
        <item name="colorPrimaryVariant">@color/blue_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/blue_500</item>
        <item name="colorSecondaryVariant">@color/blue_700</item>
    </style>

    <style name="Theme_Red" parent="Theme.FacilGimApp">
        <item name="colorPrimary">@color/red_500</item>
        <item name="colorPrimaryVariant">@color/red_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/red_500</item>
        <item name="colorSecondaryVariant">@color/red_700</item>
    </style>

    <!-- Aplica a los números de cada día -->
    <style name="CalendarDateTextAppearance" parent="TextAppearance.MaterialComponents.Body2">
        <!-- Color oscuro sobre fondo claro -->
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>

    <!-- Aplica a los nombres de los días (lun, mar, ...) -->
    <style name="CalendarWeekDayTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <!-- Color oscuro sobre fondo claro -->
        <item name="android:textColor">?attr/colorOnBackground</item>
    </style>



</resources>
