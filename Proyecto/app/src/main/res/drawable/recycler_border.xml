<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">
    <!-- Fondo blanco (puedes cambiarlo o hacerlo transparente con #00FFFFFF) -->
    <solid android:color="@android:color/white" />

    <!-- Esquinas redondeadas -->
    <corners android:radius="8dp" />

    <!-- Trazo gris claro -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" />

    <!-- Opcional: padding interior para separar contenido del borde -->
    <padding
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp" />
</shape>
